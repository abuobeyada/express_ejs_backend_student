<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <a href="/home" class="mb-3 btn btn-sm btn-primary">Back</a>
      <div class="crad text-bg-secondary p-3">
        <div class="card-header">
          <h2>Update Student</h2>
        </div>
        <div class="card-body">
          <form
            action="/edit/<%= student.id %>"
            enctype="multipart/form-data"
            method="POST"
          >
            <div class="my-3">
              <label for="">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                value="<%= student.name %>"
              />
            </div>
            <div class="my-3">
              <label for="">Roll</label>
              <input type="text" class="form-control" name="roll" value="<%=
              student.roll %>"
            </div>
            <div class="my-3">
              <label for="">Class</label>
              <input type="text" class="form-control" name="classs" value="<%=
              student.classs %>"
            </div>
            <div class="my-3">
              <label for="">Section</label>
              <input type="text" class="form-control" name="section" value="<%=
              student.section %>"
            </div>
            <div class="img-div my-3">
              <img
                src="/student/<%= student.photo %>"
                class="card-img-top"
                alt="..."
              />
            </div>
            <div class="my-3">
              <label for="">Photo</label>
              <input class="form-control" type="file" name="photo" />
            </div>
            <div class="my-3">
              <button type="submit" class="btn w-100 btn-primary">
                Update
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
