<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <a href="/create" class="btn btn-sm btn-primary mb-3">Add New Student</a>
      <div class="card">
        <div class="card-body">
          <table class="table table-striped table-success align-middle">
            <thead>
              <tr>
                <td>#</td>
                <td>Photo</td>
                <td>Name</td>
                <td>Roll</td>
                <td>Class</td>
                <td>Section</td>
                <td>Action</td>
              </tr>
            </thead>
            <tbody>
              <% student.forEach((item, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td>
                  <img class="image" src="/student/<%= item.photo %>" alt="" />
                </td>
                <td><%= item.name %></td>
                <td><%= item.roll %></td>
                <td><%= item.classs %></td>
                <td><%= item.section %></td>
                <td>
                  <a class="btn btn-sm btn-info" href="/single/<%= item.slug %>"
                    ><i class="fa-solid fa-eye"></i
                  ></a>
                  <a class="btn btn-sm btn-warning" href="/edit/<%= item.id %>"
                    ><i class="fa-solid fa-edit"></i
                  ></a>
                  <a class="btn btn-sm btn-danger" href="/delete/<%= item.id %>"
                    ><i class="fa-solid fa-trash"></i
                  ></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
