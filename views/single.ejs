<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <a href="/home" class="mb-3 btn btn-sm btn-primary">Back</a>
      <div class="card">
        <div class="img-div">
          <img
            src="/student/<%= student.photo %>"
            class="card-img-top"
            alt="..."
          />
        </div>
        <div class="card-body">
          <table class="table table-striped table-success align-middle">
            <thead>
              <tr>
                <td>Name</td>
                <td>Roll</td>
                <td>Class</td>
                <td>Section</td>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.roll %></td>
                <td><%= student.classs %></td>
                <td><%= student.section %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
